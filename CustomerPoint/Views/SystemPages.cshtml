@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Site.cshtml";
}

@section Metadata {
    @RenderSection("Metadata", false)
}

<div class="row">
    <div class="col-md-8">
		@Html.Partial("PageHeader")
        @Umbraco.Field("bodyText")
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        @RenderBody()
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", false)
}

@section Footer{
    @RenderSection("Footer", false) 
}